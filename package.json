{
  "name": "xgmao",
  "homepage": "./",
  "version": "0.0.4",
  "description": "GMAO multiplateforme",
  "main": "public/electron.js",
  "author": "Dev Team",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/m2s-project/xgmao.git"
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "@mdi/react": "^1.6.1",
    "@mdi/svg": "^7.4.47",
    "@reduxjs/toolkit": "^2.2.7",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "apexcharts": "^3.53.0",
    "axios": "^1.7.7",
    "electron-log": "^5.1.7",
    "electron-updater": "^6.3.4",
    "i18next": "^23.14.0",
    "react": "^18.3.1",
    "react-apexcharts": "^1.4.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.0.1",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.26.1",
    "react-scripts": "5.0.1",
    "redux": "^5.0.1",
    "uuid": "^10.0.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dev": "concurrently \"npm start\" \"npm run electron\"",
    "dist": "electron-builder",
    "make-cert": "electron-builder create-self-signed-cert -p xgmao",
    "deploy": "electron-builder build -w -p onTagOrDraft"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^32.0.1",
    "electron-builder": "^25.0.5"
  },
  "build": {
    "appId": "com.m2s.xgmao",
    "productName": "XGMAO",
    "files": [
      "build/**/*",
      "main.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "certificateFile": "private/xgmao.pfx",
      "verifyUpdateCodeSignature": false,
      "publisherName": "xgmao"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "m2s-project",
      "repo": "xgmao",
      "private": false,
      "releaseType": "draft"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
